<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yummy | Order</title>
    <link rel="stylesheet" href="css/cart.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/navBarStyle.css">
</head>

<body>

    {{>navbar}}


    <form class="cart_form" name="myform" action="/cart/payment">
        <span class="text heading">
            <h1>YOUR ORDER</h1>
        </span>

        <section class="entire">
            <table>
                <tr>
                    <td class="left">
                        <section class="fields cart_box">
                            <span class="text cart_box_heading">select the quantity of the ordered items. Set the
                                quantity to 0 if the ordered item is to be cancelled before making the payment</span>

                            <center>
                                <div id="items"></div>

                                <a href="/menu"><button type="button" class="btn_n back_to_menu">Back to
                                        Menu</button></a>
                            </center>
                        </section>
                    </td>
                    <td class="left">
                        <section class="fields account">
                            <span class="text account">Account</span>
                        </section>

                        <section class="fields address">
                            <span class="text address heading">Delivery details</span>
                            <div class="address_details">
                                <label class="text" for="box1">House number :</label>
                                <input type="text" class="error_msg" id="error_msg_house" name="error_house_number"
                                    value="Error in house number" disabled>
                                <input type="text" class="address_box box" name="house_number" id="box1"
                                    placeholder="type here">

                                <label class="text" for="box2">Area :</label>
                                <input type="text" class="error_msg" id="error_msg_area" name="error_area"
                                    value="error in area field" disabled>
                                <input type="text" class="address_box box" name="area" id="box2"
                                    placeholder="type here">

                                <label class="text" for="box3">City :</label>
                                <input type="text" class="error_msg" id="error_msg_city" name="error_city"
                                    value="error in city field" disabled>
                                <input type="text" class="address_box box" name="city" id="box3"
                                    placeholder="type here">

                                <label class="text" for="box4">ZIP code :</label>
                                <input type="text" class="error_msg" id="error_msg_zip" name="error_zip_code"
                                    value="error in zip code" disabled>
                                <input type="text" class="address_box box" name="zip_code" id="box4"
                                    placeholder="type here">

                                <label class="text" for="box5">email address :</label>
                                <input type="text" class="error_msg" id="error_msg_email" name="error_email"
                                    value="error in email ID" disabled>
                                <input type="text" class="address_box box" name="email" id="box5"
                                    placeholder="type here">

                                <label class="text" for="box6">mobile number (10 digit) :</label>
                                <input type="text" class="error_msg" id="error_msg_mobile" name="error_mobile"
                                    value="error in mobile number" disabled>
                                <input type="text" class="address_box last_box" name="mobile" id="box6"
                                    placeholder="type here">
                            </div>
                        </section>

                        <section class="fields delivery_status">
                            <div class="text delivery">
                                <h4>Delivery time</h4>
                                <h5>Deliver Now</h5>
                                <p>Your order will be delivered in 45 minutes</p>
                                <a href="" id="schedule_order">Schedule for later</a>
                            </div>
                        </section>

                        <section class="fields pricing">
                            <div class="text pricing">
                                <input type="checkbox" name="contactless_delivery" id="contactless">
                                <label for="contactless_delivery"><span class="text">Opt for contactless
                                        delivery</span></label>
                            </div>
                        </section>

                        <section class="fields helpline">
                            <span class="text helpline">
                                <h3>Need help?</h3>
                                <h4>Contact-12345 12345</h4>
                            </span>
                        </section>
                    </td>
                </tr>
            </table>
        </section>

        <section class="bottom">
            <center>
                <input type="submit" value="Make payment" class="submit btn_n" onclick="return validate()">
            </center>
        </section>
    </form>

    <!--Footer-->
    {{>footer}}


    <script src="jq/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="custom/menu.js"></script>
    <script src="custom/cart.js"></script>

</body>

</html>